= content_for :title, "Change your password"
.container
  .row
    .span4.offset4
      = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f|
        = devise_error_messages!
        = f.hidden_field :reset_password_token
        = f.password_field :password, placeholder: 'New password'
        = f.password_field :password_confirmation, placeholder: 'Confirm new password'
        = f.submit "Change my password", class: 'pull-right btn btn-inverse'
      = render "devise/shared/links"
